# Auth.js configuration
# Generate AUTH_SECRET with: openssl rand -base64 32
AUTH_SECRET=

# Google OAuth credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# Google Sheets Service Account
# Get from Service Account JSON file
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=

# Google Sheet ID
# Get from sheet URL: https://docs.google.com/spreadsheets/d/[SHEET_ID]/edit
GOOGLE_SHEET_ID=

# BGG XML API (optional, for game search and covers)
# Register at https://boardgamegeek.com/applications (non-commercial), then create a Token
BGG_API_TOKEN=
